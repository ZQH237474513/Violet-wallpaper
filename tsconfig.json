{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"types": ["vite/client", "@types/uni-app", "@types/node"],
		"noImplicitAny": false,
		//解析非相对模块的基础地址，默认是当前目录
		"baseUrl": ".",
		//路径映射，相对于baseUrl
		"paths": {
			"@src/*": ["src/*"],
			"@pages/*": ["src/pages/*"],
			"@assets/*": ["src/assets/*"],
			"@components/*": ["src/components/*"],
			"@utils/*": ["src/utils/*"],
			"@api/*": ["src/api/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/**/*.js",
		"src/components/*vue"
	]
}
